{
  "extends": ["tslint:recommended", "tslint-sonarts"],
  "rulesDirectory": ["codelyzer"],
  "rules": {
    "align": [true, "arguments", "elements", "members", "parameters", "statements"],
    "array-type": [true, "array"],
    "arrow-parens": [true, "ban-single-arg-parens"],
    "arrow-return-shorthand": [true, "multiline"],
    "binary-expression-operand-order": true,
    "deprecation": {
      "severity": "warn"
    },
    "curly": [true, "ignore-same-line"],
    "indent": [true, "spaces", 2],
    "interface-name": [true, "never-prefix"],
    "import-blacklist": [true, "rxjs/Rx"],
    "max-line-length": [true, { "limit": 140, "ignore-pattern": "^import [^,]+ from" }],
    "member-access": [true, "no-public"],
    "member-ordering": [
      true,
      {
        "order": [
          "public-static-field",
          "public-static-method",
          "protected-static-field",
          "protected-static-method",
          "private-static-field",
          "private-static-method",
          "public-instance-field",
          "protected-instance-field",
          "private-instance-field",
          "public-constructor",
          "protected-constructor",
          "private-constructor",
          "public-instance-method",
          "protected-instance-method",
          "private-instance-method"
        ]
      }
    ],
    "newline-before-return": true,
    "no-bitwise": false,
    "no-consecutive-blank-lines": true,
    "no-console": [true, "debug", "log", "time", "timeEnd", "trace"],
    "no-duplicate-imports": true,
    "no-inferrable-types": [true, "ignore-params"],
    "no-irregular-whitespace": true,
    "no-non-null-assertion": true,
    "no-redundant-jsdoc": true,
    "no-switch-case-fall-through": true,
    "no-var-requires": false,
    "no-empty-interface": true,
    "no-empty": [true, "allow-empty-catch", "allow-empty-functions"],
    "no-magic-numbers": [true, -1, 0, 1, 2, 3, 4, 5, 10],
    "ban-comma-operator": false,
    "no-unused-expression": [true, "allow-fast-null-checks", "allow-new", "allow-tagged-template"],
    "object-literal-key-quotes": [true, "as-needed"],
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "prefer-switch": true,
    "prefer-template": [true, "allow-single-concat"],
    "semicolon": [true, "always", "ignore-bound-class-methods"],
    "space-before-function-paren": [
      true,
      {
        "anonymous": "always",
        "named": "never",
        "asyncArrow": "always",
        "method": "never",
        "constructor": "never"
      }
    ],
    "space-within-parens": true,
    "trailing-comma": [true, { "multiline": "never", "singleline": "never" }],
    "quotemark": [true, "single"],
    "no-output-on-prefix": true,
    "whitespace": {
      "options": [
        "check-branch",
        "check-decl",
        "check-operator",
        "check-module",
        "check-separator",
        "check-rest-spread",
        "check-type",
        "check-typecast",
        "check-preblock"
      ]
    },
    "contextual-decorator": true,
    "contextual-lifecycle": true,
    "no-lifecycle-call": true,
    "use-lifecycle-interface": true,
    "angular-whitespace": false,
    "component-class-suffix": true,
    "directive-class-suffix": true,
    "import-destructuring-spacing": true,
    "no-inputs-metadata-property": true,
    "no-outputs-metadata-property": true,
    "no-host-metadata-property": true,
    "no-input-rename": true,
    "no-output-rename": true,
    "use-pipe-transform-interface": true,
    "prefer-inline-decorator": [true, "HostListener"],
    "cognitive-complexity": {
      "severity": "warn"
    },
    "no-duplicate-string": {
      "severity": "warn"
    }
  }
}
